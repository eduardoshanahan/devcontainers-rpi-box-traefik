extends: default

# Skip vendored Ansible collections installed under src/collections (and any
# other ansible_collections directories if the workspace is mounted elsewhere).
ignore: |
  **/ansible_collections/**

rules:
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
